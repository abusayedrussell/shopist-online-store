{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_comments",
      "default": true,
      "label": "Display Comments"
    },
    {
      "type": "checkbox",
      "id": "enable_relateds",
      "default": true,
      "label": "Display Related Posts"
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_author",
          "default": true,
          "label": "Display Author"
        },
        {
          "type": "checkbox",
          "id": "enable_published_date",
          "default": true,
          "label": "Display Published Dates"
        }
      ]
    },
    {
      "type": "featured_image",
      "name": "Thumbnail",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "image_height",
          "options": [
            {
              "value": "adapt",
              "label": "Adapt"
            },
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "large"
            }
          ],
          "default": "adapt",
          "label": "Adapt"
        }
      ]
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
